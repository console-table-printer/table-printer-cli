{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "index.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
