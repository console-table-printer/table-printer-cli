{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "index.ts",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!**/*.test.ts"
  ],
  "preset": "ts-jest",
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "testRegex": ".*\\.test\\.ts$",
  "moduleDirectories": ["node_modules", "<rootDir>"],
  "coverageReporters": ["text", "lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}