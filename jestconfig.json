{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleDirectories": ["node_modules", "src"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "roots": ["<rootDir>"],
  "testMatch": ["<rootDir>/src/**/__tests__/**/*.test.ts", "<rootDir>/test/**/*.test.ts"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "index.ts",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!**/*.test.ts"
  ],
  "coverageReporters": ["text", "lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}