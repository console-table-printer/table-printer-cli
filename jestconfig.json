{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "index.ts",
    "!**/*.d.ts",
    "!**/node_modules/**",
    "!**/*.test.ts"
  ],
  "preset": "ts-jest",
  "testMatch": [
    "<rootDir>/**/test/**/*.test.[jt]s?(x)",
    "<rootDir>/**/src/**/*.test.[jt]s?(x)"
  ],
  "coverageReporters": ["text", "lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}